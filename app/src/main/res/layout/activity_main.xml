<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#F600"
            android:ellipsize="none"
            android:gravity="center"
            android:padding="0dp"
            android:singleLine="true"
            android:text="HELLO"
            android:textColor="#FFF"
            android:textSize="32dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#F900"
            android:ellipsize="none"
            android:gravity="center"
            android:padding="0dp"
            android:singleLine="true"
            android:text="TO"
            android:textColor="#FFF"
            android:textSize="32dp"/>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#f50505"
            android:orientation="horizontal"
            android:padding="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="aaa"
                android:textColor="#FFF"
                android:textSize="32sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/right_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#008"
            android:ellipsize="none"
            android:gravity="center"
            android:padding="0dp"
            android:singleLine="true"
            android:text="HELLO"
            android:textColor="#F900"
            android:textSize="32dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#00B"
            android:ellipsize="none"
            android:gravity="center"
            android:padding="0dp"
            android:singleLine="true"
            android:text="TO"
            android:textColor="#F900"
            android:textSize="32dp"/>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#4444ff"
            android:orientation="horizontal"
            android:padding="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorAccent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="aaa"
                android:textColor="@color/colorAccent"
                android:textSize="32sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/left_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#F600"
            android:ellipsize="none"
            android:gravity="center"
            android:padding="0dp"
            android:singleLine="true"
            android:text="HELLO"
            android:textColor="#FFF"
            android:textSize="32dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#F900"
            android:gravity="center"
            android:padding="0dp"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="TO"
            android:textColor="#FFF"
            android:textSize="32dp"/>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#f50505"
            android:orientation="horizontal"
            android:padding="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="aaa"
                android:textColor="#FFF"
                android:textSize="32sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <com.seart.myapplication.SegmentedButtonGroup
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.seart.myapplication.SegmentedButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <com.seart.myapplication.SegmentedButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <com.seart.myapplication.SegmentedButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </com.seart.myapplication.SegmentedButtonGroup>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="BAS"/>
</RelativeLayout>
