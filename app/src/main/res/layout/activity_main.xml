<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/ceryle_radioRealButtonGroup_cardView"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <com.seart.myapplication.SegmentedButtonGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:sbg_animateSelector="bounce"
            app:sbg_animateSelectorDuration="1000"
            app:sbg_selectorColor="#0F0">

            <com.seart.myapplication.SegmentedButton
                app:sb_image="@mipmap/ic_launcher"
                app:sb_textColor="#FFF"

                app:sb_imageHeight="24dp"
                app:sb_imageWidth="24dp"
                app:sb_imageTint="@color/colorPrimaryDark"
                app:sb_backgroundColor="@color/colorAccent"
                app:sb_text="button1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <com.seart.myapplication.SegmentedButton
                app:sb_image="@mipmap/ic_launcher"
                app:sb_textColor="#FFF"

                app:sb_imageHeight="24dp"
                app:sb_imageWidth="24dp"

                app:sb_imageTint="@color/colorPrimaryDark"
                app:sb_backgroundColor="@color/colorAccent"


                app:sb_text="button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <com.seart.myapplication.SegmentedButton
                app:sb_image="@mipmap/ic_launcher"
                app:sb_textColor="#FFF"

                app:sb_imageHeight="24dp"
                app:sb_imageWidth="24dp"

                app:sb_imageTint="@color/colorPrimaryDark"
                app:sb_backgroundColor="@color/colorAccent"

                app:sb_text="button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

        </com.seart.myapplication.SegmentedButtonGroup>


    </android.support.v7.widget.CardView>


</RelativeLayout>
