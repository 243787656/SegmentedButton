<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.seart.myapplication.SegmentedButtonGroup
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:sbg_radius="15dp"
            app:sbg_shadow="true"
            app:sbg_shadowElevation="3dp"
            app:sbg_shadowMargin="4dp"
            app:sbg_animateSelectorDuration="500"
            app:sbg_selectorColor="#0F0">

            <com.seart.myapplication.SegmentedButton
                app:sb_image="@mipmap/ic_launcher"
                app:sb_textColor="#FFF"

                app:sb_imageTint="@color/colorPrimaryDark"
                app:sb_backgroundColor="@color/colorAccent"
                app:sb_text="button1"

                app:sb_ripple="true"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.seart.myapplication.SegmentedButton
                app:sb_image="@mipmap/ic_launcher"
                app:sb_textColor="#FFF"

                app:sb_imageTint="@color/colorPrimaryDark"
                app:sb_backgroundColor="@color/colorAccent"

                app:sb_ripple="true"

                app:sb_text="button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.seart.myapplication.SegmentedButton
                app:sb_image="@mipmap/ic_launcher"
                app:sb_textColor="#FFF"

                app:sb_ripple="true"
                app:sb_imageTint="@color/colorPrimaryDark"
                app:sb_backgroundColor="@color/colorAccent"

                app:sb_text="button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.seart.myapplication.SegmentedButtonGroup>

</RelativeLayout>
