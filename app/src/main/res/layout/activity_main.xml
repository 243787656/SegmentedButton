<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <co.ceryle.segmentedcontrol.SegmentedButtonGroup
        android:id="@+id/segmentedButtonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        app:sbg_animateSelector="bounce"
        app:sbg_animateSelectorDuration="1000"

        app:sbg_backgroundColor="@color/red_200"
        app:sbg_dividerColor="#FFF"
        app:sbg_dividerPadding="10dp"

        app:sbg_dividerRadius="10dp"

        app:sbg_dividerSize="20dp"
        app:sbg_position="1"
        app:sbg_radius="15dp"

        app:sbg_ripple="true"
        app:sbg_rippleColor="@color/red"

        app:sbg_selectorColor="@color/blue_100"
        app:sbg_selectorImageTint="@color/blue_300"
        app:sbg_selectorTextColor="@color/white"
        app:sbg_shadow="true"
        app:sbg_shadowElevation="3dp"
        app:sbg_shadowMargin="4dp">

        <co.ceryle.segmentedcontrol.SegmentedButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="4dp"
            android:padding="4dp"
            android:text="B-1"
            android:textColor="@color/red_700"
            app:buttonImageTint="@color/red_700"/>

        <co.ceryle.segmentedcontrol.SegmentedButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:padding="4dp"
            android:text="B-2"
            android:textColor="@color/red_700"
            app:buttonImageTint="@color/red_700"/>

        <co.ceryle.segmentedcontrol.SegmentedButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/ic_launcher"
            android:padding="4dp"
            android:text="B-3"
            android:textColor="@color/red_700"
            app:buttonImageTint="@color/red_700"/>

    </co.ceryle.segmentedcontrol.SegmentedButtonGroup>


    <co.ceryle.segmentedcontrol.SegmentedButtonGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"

        app:sbg_animateSelector="bounce"
        app:sbg_animateSelectorDuration="1000"

        app:sbg_position="0"
        app:sbg_radius="25dp"

        app:sbg_selectorColor="@color/blue_100"
        app:sbg_selectorImageTint="@color/blue_300"
        app:sbg_selectorTextColor="@color/white"
        app:sbg_shadow="true"
        app:sbg_shadowElevation="5dp"
        app:sbg_shadowMargin="6dp">

        <co.ceryle.segmentedcontrol.SegmentedButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/b1"
            android:drawablePadding="4dp"
            android:padding="4dp"
            android:text="B-1"
            android:textColor="@color/red_700"
            app:buttonImageScale="0.4"
            app:buttonImageTint="@color/red_700"/>

        <co.ceryle.segmentedcontrol.SegmentedButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/b2"
            android:drawablePadding="4dp"
            android:padding="4dp"
            android:text="B-2"
            android:textColor="@color/red_700"
            app:buttonImageScale="0.4"
            app:buttonImageTint="@color/red_700"/>

        <co.ceryle.segmentedcontrol.SegmentedButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/b3"
            android:drawablePadding="4dp"
            android:padding="4dp"
            android:text="B-3"
            android:textColor="@color/red_700"
            app:buttonImageScale="0.4"
            app:buttonImageTint="@color/red_700"/>

    </co.ceryle.segmentedcontrol.SegmentedButtonGroup>

</LinearLayout>
